<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BTSActivity">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="BTS에 대해 알아보아용"
                android:textSize="30dp" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/title" />

        </RelativeLayout>

    </ScrollView>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/scroll"
    android:id="@+id/framelayout">

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp">

        <android.support.design.widget.TabItem
            android:id="@+id/v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="뷔" />

        <android.support.design.widget.TabItem
            android:id="@+id/jin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="진" />

        <android.support.design.widget.TabItem
            android:id="@+id/jimin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지민" />

        <android.support.design.widget.TabItem
            android:id="@+id/jungguk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정국" />

        <android.support.design.widget.TabItem
            android:id="@+id/rapmon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="랩몬스터" />

        <android.support.design.widget.TabItem
            android:id="@+id/sugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="슈가" />

        <android.support.design.widget.TabItem
            android:id="@+id/jhope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제이홉" />
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#eedd">

    </android.support.v4.view.ViewPager>
</FrameLayout>

</RelativeLayout><!--<FrameLayout--><!--android:id="@+id/framelayout"--><!--android:layout_width="match_parent"--><!--android:layout_height="300dp"--><!--android:layout_below="@+id/recyclerview" />-->

